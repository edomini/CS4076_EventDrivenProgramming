<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.effect.DropShadow?>

<StackPane xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.project.client.controllers.OtherController"
           style="-fx-background-color: rgb(255, 230, 230);">

    <VBox alignment="CENTER" spacing="20.0"
          style="-fx-background-color: #FFFFFF; -fx-background-radius: 40px; -fx-padding: 120px;"
          maxWidth="450" maxHeight="450">
        <effect>
            <DropShadow color="rgba(0, 0, 0, 0.3)" radius="5" spread="0.05" offsetX="0" offsetY="2"/>
        </effect>

        <!-- Stop Program -->
        <Button fx:id="stopButton" text="Stop" onAction="#handleStop"
                style="-fx-font-size: 14px; -fx-padding: 5px; -fx-background-radius: 95px;" prefWidth="140" prefHeight="50"/>

        <!-- Back Button -->
        <Button fx:id="backButton" text="Back" onAction="#handleBack"
                style="-fx-font-size: 14px; -fx-padding: 5px; -fx-background-radius: 95px;" prefWidth="140" prefHeight="50"/>
    </VBox>
</StackPane>