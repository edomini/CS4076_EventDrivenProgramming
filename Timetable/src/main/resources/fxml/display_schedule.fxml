<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.timetable.Controllers.DisplayScheduleController">

    <!-- Set VBox in the center -->
    <center>
        <VBox spacing="10" style="-fx-background-color: #F8D7DA; -fx-padding: 20;" alignment="CENTER">
            <!-- Back Button aligned to top left -->
            <HBox style="-fx-alignment: top-left;">
                <Button fx:id="backButton" text="Back" onAction="#handleBackAction"
                        style="-fx-background-color: #D3D3D3; -fx-font-size: 12px; -fx-padding: 5px 10px; -fx-font-weight: bold; -fx-background-radius: 8px;"/>
            </HBox>

            <!-- Smaller GridPane for Timetable -->
            <GridPane fx:id="scheduleGrid" hgap="8" vgap="8"
                      style="-fx-background-color: #FCECEC; -fx-padding: 10; -fx-border-radius: 8; -fx-background-radius: 8;"
                      alignment="CENTER">

                <!-- Time Header -->
                <Label text="Time" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

                <!-- Day Headers -->
                <Label text="Monday" GridPane.rowIndex="0" GridPane.columnIndex="1" GridPane.halignment="CENTER"/>
                <Label text="Tuesday" GridPane.rowIndex="0" GridPane.columnIndex="2" GridPane.halignment="CENTER"/>
                <Label text="Wednesday" GridPane.rowIndex="0" GridPane.columnIndex="3" GridPane.halignment="CENTER"/>
                <Label text="Thursday" GridPane.rowIndex="0" GridPane.columnIndex="4" GridPane.halignment="CENTER"/>
                <Label text="Friday" GridPane.rowIndex="0" GridPane.columnIndex="5" GridPane.halignment="CENTER"/>
            </GridPane>
        </VBox>
    </center>
</BorderPane>








