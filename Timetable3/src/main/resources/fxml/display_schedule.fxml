<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.HBox?>
<BorderPane xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.timetable.Controllers.DisplayScheduleController">

    <top>
        <Button fx:id="backButton" text="Back" onAction="#handleBackAction"
                style="-fx-background-color: #D3D3D3; -fx-font-size: 14px; -fx-alignment: top-left;"/>
    </top>

    <center>
        <VBox spacing="10" style="-fx-background-color: #F8D7DA; -fx-padding: 20;" alignment="CENTER">
            <HBox spacing="10" alignment="CENTER">
                <!-- Import from CSV Button -->
                <Button fx:id="importButton" text="Import from CSV" onAction="#handleImport"
                        style="-fx-background-color: #D3D3D3; -fx-font-size: 14px;"/>

                <!-- Clear Schedule Button -->
                <Button fx:id="clearButton" text="Clear Schedule" onAction="#handleClear"
                        style="-fx-background-color: #D3D3D3; -fx-font-size: 14px;"/>

                <!-- Spacer to keep title centered -->
                <HBox HBox.hgrow="ALWAYS"/>

                <!-- Timetable Title -->
                <Label text="Timetable" style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

                <!-- End of spacer -->
                <HBox HBox.hgrow="ALWAYS"/>

                    <!-- Export as PDF Button -->
                    <Button fx:id="exportPDFButton" text="Export to PDF" onAction="#handleExportPDF"
                            style="-fx-background-color: #D3D3D3; -fx-font-size: 14px;"/>

                    <!-- Export as CSV Button -->
                    <Button fx:id="exportCSVButton" text="Export to CSV" onAction="#handleExportCSV"
                            style="-fx-background-color: #D3D3D3; -fx-font-size: 14px;"/>

            </HBox>

            <!-- GridPane for Timetable -->
            <GridPane fx:id="scheduleGrid" hgap="10" vgap="10"
                      style="-fx-background-color: #FCECEC; -fx-padding: 20; -fx-border-radius: 10; -fx-background-radius: 10;"
                      alignment="CENTER">

                <!-- Time Header -->
                <Label text="Time" GridPane.rowIndex="0" GridPane.columnIndex="0"
                       style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

                <!-- Day Headers -->
                <Label text="Monday" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
                <Label text="Tuesday" GridPane.rowIndex="0" GridPane.columnIndex="2"/>
                <Label text="Wednesday" GridPane.rowIndex="0" GridPane.columnIndex="3"/>
                <Label text="Thursday" GridPane.rowIndex="0" GridPane.columnIndex="4"/>
                <Label text="Friday" GridPane.rowIndex="0" GridPane.columnIndex="5"/>
            </GridPane>
        </VBox>

    </center>
</BorderPane>
